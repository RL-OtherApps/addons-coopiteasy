<odoo>

    <record id="view_company_form_terms_conditions" model="ir.ui.view">
        <field name="name">res.company.form.terms.conditions</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="terms_conditions" string="Terms and Conditions">
                    <field name="terms_conditions_ids" widget="one2many_list">
                        <form>
                            <group>
                                <group>
                                    <field name="name"/>
                                    <field name="content" widget="html"/>
                                    <field name="active"/>
                                </group>
                            </group>
                        </form>
                        <tree>
                            <field name="name"/>
                            <field name="content"/>
                            <field name="active"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>

    </record>
</odoo>
