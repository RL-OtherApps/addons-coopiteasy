<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_style">
        <style type="text/css">
            .col-xs-4 {
            // The height is set approximatly because size in mm doesn't work well
            height: 175px;
            min-height: 175px;
            max-height: 175px;
            padding: 20px;
            text-align: center;
            font-size: 14px;
            margin: 0;
            }

            .barcode-img {
            width: 100%;
            // height in percentage doesn't work on all version of wkhtml, don't ask why
            height: 40px;
            }

            .barcode {
            font-size: 20px;
            }

            .product-name {
            font-weight: bold;
            overflow: hidden;
            line-height: 1.4em;
            max-height: 2.8em;
            }
        </style>
        <t t-raw="0"/>
    </template>

    <template id="report_style_65">
        <style type="text/css">
            .page {
            text-align:center;
            padding:10mm 5mm;
            display:block;
            border: 1px solid grey;
            }

            .barcode-column {
            height: 21.2mm;
            /*max-height: 21.2mm;
            min-height: 21.2mm;*/
            width:38.1mm;
            /*min-width:38.1mm;
            max-width:38.1mm;*/
            text-align: center;
            font-size: 9px;
            padding: 0;
            margin: 0 1.5mm;
            float:left;
            overflow:hidden;
            border: 1px solid red;
            }

            .barcode-column .barcode-column-inside {
            overflow:hidden;
            border:1px solid green;
            margin:0 10px 10px 10px;
            }

            .barcode-column .barcode {
            font-size: 10px;
            }
        </style>
        <t t-raw="0"/>
    </template>
</odoo>
