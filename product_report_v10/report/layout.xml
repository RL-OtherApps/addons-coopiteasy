<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_style">
        <style type="text/css">
            .col-xs-4 {
            // The height is set approximatly because size in mm doesn't work well
            height: 175px;
            min-height: 175px;
            max-height: 175px;
            padding: 20px;
            text-align: center;
            font-size: 14px;
            margin: 0;
            }

            .barcode-img {
            width: 100%;
            // height in percentage doesn't work on all version of wkhtml, don't ask why
            height: 40px;
            }

            .barcode {
            font-size: 20px;
            }

            .product-name {
            font-weight: bold;
            overflow: hidden;
            line-height: 1.4em;
            max-height: 2.8em;
            }
        </style>
        <t t-raw="0"/>
    </template>

    <template id="report_style_65">
        <style type="text/css">
            .barcode-column {
            height: 100px;
            max-height: 100px;
            min-height: 100px;
            width:177px;
            min-width:177px;
            max-width:177px;
            text-align: center;
            font-size: 9px;
            padding: 0;
            margin: 0 6px;
            float:left;
            overflow:hidden;
            }

            .barcode-column .barcode-column-inside {
            overflow:hidden;
            height: 90px;
            max-height: 90px;
            min-height: 90px;
            width:160px;
            min-width:160px;
            max-width:160px;
            margin-left:5px;
            text-align: center;
            }

            .barcode-column .barcode {
            font-size: 10px;
            }
        </style>
        <t t-raw="0"/>
    </template>
</odoo>
