<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_producttemplate_label_repeat">
    <t t-call="report.html_container">
     	<t t-set="data_report_margin_top" t-value="20"/>
        <t t-set="data_report_header_spacing" t-value="9"/>
        <t t-set="data_report_dpi" t-value="300"/>
        <t t-call="report.internal_layout">
	    	<div class="page">
		        <t t-foreach="docs" t-as="product">
	    		<div class="row">
					<t t-foreach="range(24)" t-as="l">
			            <div class="col-xs-4">
			                <table class="table table-borderless">
			                    <tbody>
			                        <tr style="border-style: none;">
					                    <td style="text-align: center; vertical-align: middle;border-style: none;" class="col-xs-3">
					                        <img t-if="product.barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', product.barcode, 600, 150)" style="width:100%;height:40%;"/>
					                    	<span t-field="product.barcode"/>
					                    </td>
					                </tr>
					                <tr>
					                	<td style="font-size: 10px;text-align: center; vertical-align: middle;border-style: none;" class="col-xs-3">
					                    	<strong t-field="product.name"/>
					                    </td>
					                </tr>
			                    </tbody>
			                </table>
			            </div>
		            </t>
	       		</div>
		        </t>
	        </div>
        </t>
    </t>
</template>
</odoo>