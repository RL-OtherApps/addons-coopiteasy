<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_producttemplate_label_repeat">
    <t t-call="report.html_container">
      <t t-set="data_report_margin_top" t-value="20"/>
      <t t-set="data_report_header_spacing" t-value="9"/>
      <t t-set="data_report_dpi" t-value="300"/>
      <t t-call="product_report_v10.report_layout">
        <div class="page">
          <t t-foreach="docs" t-as="product">
            <div class="row">
              <t t-foreach="range(24)" t-as="l">
                <div class="col-xs-4">
                  <table class="table table-borderless" style="padding: 0px 0px 0px 0px;">
                    <tbody>
                      <tr style="border-style: none;">
                        <td style="text-align: center; vertical-align: middle;border-style: none;">
                          <img t-if="product.barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', product.barcode, 600, 150)" style="width:100%;height:40%;"/>
                          <span t-field="product.barcode"/>
                        </td>
                      </tr>
                      <tr>
                        <td style="font-size: 9px;text-align: center; vertical-align: middle;border-style: none; padding-bottom: 0px;">
                          <strong t-esc="product.name[0:39]"/>
                        </td>
                      </tr>
                      <t t-if="len(product.name) > 39">
                        <tr style="vertical-align: top">
                          <td style="font-size: 9px;text-align: center; border-style: none; padding: 0px 0px 0px 0px;">
                            <strong t-esc="product.name[40:len(product.name)]"/>
                          </td>
                        </tr>
                      </t>
                      <t t-if="not len(product.name) > 39">
                        <tr style="vertical-align: top">
                          <td style="font-size: 9px;text-align: center; border-style: none; padding: 0px 0px 0px 0px;">
                            <strong> &#160; </strong>
                          </td>
                        </tr>
                      </t>
                    </tbody>
                  </table>
                </div>
              </t>
            </div>
          </t>
        </div>
      </t>
    </t>
  </template>
</odoo>
